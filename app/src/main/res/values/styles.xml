<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="android:background">@color/primaryDarkColor</item>
    </style>

    <style name="RegularButton" parent="Widget.MaterialComponents.Button">
        <item name="iconTint">@color/primaryTextColor</item>
        <item name="iconGravity">textStart</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="TopAppBar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/primaryDarkColor</item>
    </style>

    <style name="ButtonLight" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconTint">@color/primaryTextColor</item>
        <item name="iconGravity">textStart</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="textAllCaps">false</item>
        <item name="strokeWidth">1dp</item>
    </style>

</resources>
